<h1>My tasks</h1>
<%= link_to "create a new task", tasks_new_path %>
<% @tasks.each do |task| %>
  <h2><%= link_to "#{task.title.capitalize}", task_path(task["id"]) %></h2>
  <p><%= task.completed ? "☑️" : "⬜️" %></p>
  <p><%=
    link_to "🗑",
    tasks_path(@task),
    method: :delete,
    data: { confirm: "Are you sure?" }
    %>
  <!-- <input disabled="disabled" id="eula" name="eula" type="checkbox" value="accepted" /> -->
<% end %>
